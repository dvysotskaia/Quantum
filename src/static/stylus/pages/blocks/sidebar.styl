.navigation
  transition box-shadow ease-in .4s
  //margin-bottom: 30px

  &:hover
    box-shadow 0 3px 25px rgba(0, 0, 0, 0.219)


.navigation-item
  display flex
  align-items center
  border-bottom 2px solid #f5f5f5
  padding 20px 17px
  transition ease-in .4s

  &:hover
    cursor pointer
    .icon
      fill accentColor
    .navigation-item__title
      color accentColor


.navigation-item__icon
  flex-shrink 0
  display flex
  justify-content: center;
  align-items center
  width: 56px
  margin-right: 1px
  .icon
    size(22px,20px)
    fill #cccccc

.navigation-item__title
  color #808080
  font-size 13px
  font-weight 500
  line-height 1
  transition ease-in .4s

.navigation-item__arrow
  margin-left: auto
  .icon
    size(13px,17px)
    fill #b5b5b5


.info-block
  //width: 25.5%
  flex-shrink 0
  display flex
  flex-direction column
  align-items center
  justify-content: center;
  padding: 156px 32px
  transition ease-in .4s
  cursor pointer

  &:hover
    box-shadow 0 3px 25px rgba(0, 0, 0, 0.219)
    .info-block__title
      color accentColor
    .info-block__desc
      color #ff7410

.info-block__title
  color #666666
  font-size 20px
  font-weight 500
  line-height 1
  margin-bottom: 24px
  transition ease-in .4s

.info-block__desc
  color #d1d1d1
  font-size 14px
  font-weight 500
  line-height 1
  transition ease-in .4s
