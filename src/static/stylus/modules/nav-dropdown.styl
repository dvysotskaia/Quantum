.nav-dropdown
  position relative
  width: 100%
  height: 100%
  display flex
  justify-content: center;
  align-items center
  cursor pointer
  padding-left: 28px
  padding-right: 28px
  &:not(:last-child)
    border-right $border

  &:hover
    .nav-dropdown__dropdown
      display block

    .nav-dropdown__title
      color accentColor

    .nav-dropdown__title-icon
      .icon
        fill accentColor


.nav-dropdown__title
  position relative
  color #b3b3b3
  line-height 1
  //letter-spacing 1.25px
  font-size: 14px
  text-transform none
  font-weight 500
  width auto
  padding-right: 20px
  transition ease-in .4s


.nav-dropdown__dropdown
  display none
  absolute($top:100%,$left:-2px,$right:-2px)
  //width: 240px
  border 2px solid #f5f5f5
  border-radius 0 0 4px 4px
  background-color #fff
  align-items center

.nav-dropdown__dropdown-item
  height: 40px
  color #808080
  font-family Roboto
  font-size 13px
  font-weight 500
  line-height 1
  display flex
  align-items center
  padding-left: 28px
  border-bottom 2px solid #f5f5f5
  transition ease-in .4s
  &:last-child()
    border-bottom none
  &:hover
    background-color #f1f1f1

.nav-dropdown__title-icon
    absolute($right:0, $top:50%)
    transform translateY(-50%)
    content ""
    display block

  .icon
    size(10px,6px)
    fill #b3b3b3
    transition ease-in .4s