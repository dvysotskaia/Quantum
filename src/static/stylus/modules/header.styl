.header
  background-color #fff
  box-shadow 0 3px 10px rgba(0, 0, 0, 0.08)
  margin-bottom: 30px
  z-index 10

.header-container
  display flex
  justify-content: space-between;
  padding-left: 23px
  padding-right: 41px
  align-items center
  padding-top: 30px
  padding-bottom: 38px

