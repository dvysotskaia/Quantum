.footer
  background-color #ffffff
  margin-top: 30px

.footer-top-wrapper
  border-bottom 2px solid #f5f5f5

.footer__row
  display flex
  justify-content space-between;
  align-items center
  padding-top: 48px
  padding-bottom: 52px

.footer__row--copyright
  padding-top: 40px
  padding-bottom: 49px

.nav-footer__list
  display flex

.nav-footer__list-item
  font-size 16px
  font-weight 500
  line-height 1
  &:not(:last-child)
    margin-right: 59px

.nav-footer__link
  color #666666
  transition ease-in .4s
  &:hover
    color accentColor


.nav-footer__link--dropdown
  span
    transition ease-in .4s
    margin-left: 10px
  &:hover
    .icon
      fill accentColor


.footer__socials
  display flex

.footer-social
  transition ease-in .4s
  &:not(:last-child)
    margin-right: 40px
  .icon
    size(20px,16px)
    fill #666666
    cursor pointer
    &:hover
      fill accentColor

.footer__copyright
  display flex

.footer__copyright-item
  color #b8b8b8
  font-size 14px
  font-weight 500
  line-height 1
  transition ease-in .4s
  cursor pointer
  &:not(:last-child)
    margin-right: 32px
  &:hover
    color accentColor

.footer__payment
  display flex
  align-items center

.footer__payment-item
  color #b8b8b8
  font-size 14px
  font-weight 500
  line-height 1
  margin-right: 29px

.footer__payment-img
  &:not(:last-child)
    margin-right: 20px

